Film "image" "integer xresolution" [1920] "integer yresolution" [1080] 
Sampler "adaptive" "integer minsamples" [16] "integer maxsamples" [128]
Renderer "sampler"

LookAt 5 45 45    3 11 0 0 1 0
Camera "perspective" "float fov" [90]

WorldBegin



#Luz - Ceu
AttributeBegin
LightSource "infinite" "color L" [ 0.09 0.13 0.23 ] "integer nsamples"  [2]
AttributeEnd


#Luz - Sol
AttributeBegin
LightSource "distant" "color L" [ 1.9 1.2 0.52 ] "point from" [290 160 50] "point to" [0 0 0]
AttributeEnd


#Luz - Sol2 - brilho na parte esquerda da imagem
AttributeBegin
Translate 350 35 -50
AreaLightSource "area" "color L" [ 170 105 75 ] "integer nsamples"  [4]
Shape "sphere" "float radius" [15]
AttributeEnd



