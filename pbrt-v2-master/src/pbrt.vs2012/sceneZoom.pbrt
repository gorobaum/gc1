Material "matte" "texture Kd" "sky"
Shape "trianglemesh" "point P" [ -550 0 -200 550 0 -200 550 550 -200 -550 550 -200 ]
	"integer indices" [ 0 1 2 2 3 0]
AttributeEnd


AttributeBegin
Translate 5 0 30
Scale 0.35 0.35 0.35
Rotate 220 0 1 0
Rotate -90 1 0 0
Material "uber" "color Kd" [0.25 0.70 0.25] "color Ks" [0.25 0.70 0.25] "color Kr" [0.25 0.70 0.25]
